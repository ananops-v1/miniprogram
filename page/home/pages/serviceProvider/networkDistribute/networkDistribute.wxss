@import '../../../../common/lib/common.wxss';
@import "../../../../common/lib/weui.wxss";
@import "../../../../common/modal/modal-tpl.wxss";
.picker{
  padding: 19rpx 26rpx;
  background-color: #FFFFFF;
}
.top-tab{
  width: 750rpx;
  height: 100rpx;
  background: #2D4E95;
  color: #8CCEFD;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  z-index: 9999;
}

.toptab.active{
  color: #ffffff;
  border-bottom: solid 2px #ffffff;
}
.activity{
  width: 750rpx;
  height: 375rpx;
}
.activity image{
  width: 750rpx;
  height: 375rpx;
}
.placehold{
  font-size: 28rpx;
  padding: 80rpx 0;
}
.icon-box{
  margin-bottom: 6rpx;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
}
.icon-box-img{
  margin-right: 4rpx;
  width: 175rpx;
  height: 175rpx;
}
.icon-box-ctn{
  flex-shrink: 100;
}
.icon-box-title{
  font-size: 34rpx;
}
.icon-box-desc{
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #888;
}
.orderlog_view {
  display: flex;
  justify-content: center;
  font-size: 35rpx;
  margin: 21rpx;
}
.orderlog_time {
  width: 200rpx;
}
.orderlog_content {
  color: grey;
  width: 400rpx;
}
.orderlog_content.first {
  color: orange;
  width: 400rpx;
}
.orderlog_image {
  width: 100rpx;
  height: 100rpx;
}
.add_btn{
    width: 100%;
    position: fixed;
    bottom: 30rpx;
}
.btn{
    margin-top: 30rpx;
    width: 450rpx;
    background: #2D4E95;
    color: #fff;
    border-radius: 70rpx;
}