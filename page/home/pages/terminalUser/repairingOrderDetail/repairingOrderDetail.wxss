@import '../../../../common/lib/common.wxss';
@import '../../../../common/modal/modal-tpl.wxss'

.container {
  height: 1500rpx;
}

.top-tab {
  width: 750rpx;
  height: 100rpx;
  background: #2d4e95;
  color: #8ccefd;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  z-index: 9999;
}

.toptab.active {
  color: #fff;
  border-bottom: solid 2px #fff;
}

.activity {
  width: 750rpx;
  height: 375rpx;
}

.activity image {
  width: 750rpx;
  height: 375rpx;
}

.placehold {
  font-size: 28rpx;
  padding: 80rpx 0;
}

.orderlog_view {
  display: flex;
  justify-content: center;
  font-size: 35rpx;
  margin: 21rpx;
}

.orderlog_time {
  width: 200rpx;
}

.orderlog_content {
  color: grey;
  
}

.orderlog_content.first {
  color: orange;
}

.orderlog_image {
  width: 100rpx;
  height: 100rpx;
}


.line{
margin: 0 auto;
background-color: #D8D8D8;
}