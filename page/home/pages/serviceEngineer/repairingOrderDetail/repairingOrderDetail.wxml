<import src="../../../../common/modal/modal-tpl.wxml" />
<!-- 顶部tabbar -->
<view class="top-tab flex-wrp flex-tab ">
  <view class="toptab flex-item {{currentNavtab==idx ? 'active' : ''}}" wx:for="{{navTab}}" wx:key="itemName" wx:for-index="idx" wx:for-item="itemName" data-idx="{{idx}}" bindtap="switchTab">
    {{itemName}}
  </view>
</view>
<!-- tabbar对应的内容 -->.
<view>
  <view class="ctnt1 placehold" hidden="{{currentNavtab==0 ? '' : true}}">
    <view class="page__bd">
      <mp-cells ext-class="my-cells">
        <mp-cell value="设备编号" footer="{{}}">{{}}</mp-cell>
        <mp-cell value="设备名称" footer="{{}}"></mp-cell>
        <mp-cell value="设备位置" footer="{{orderInfo.address_name}}">{{orderInfo.address_name}}</mp-cell>
      </mp-cells>
    </view>
  </view>
  <view class="ctnt1 placehold" hidden="{{currentNavtab==1 ? '' : true}}">
    <view class="page__bd">
      <mp-cells ext-class="my-cells">
        <mp-cell value="故障程度" footer="{{}}"></mp-cell>
        <mp-cell value="故障等级" footer="{{}}"></mp-cell>
        <mp-cell value="故障类别" footer="{{}}"></mp-cell>
        <mp-cell value="故障描述" footer="{{}}"></mp-cell>
        <mp-cell value="报修人" footer="{{orderInfo.userId}}">{{orderInfo.userId}}</mp-cell>
        <mp-cell value="联系电话" footer="{{orderInfo.call}}" bindtap="makePhone" data-phone="{{orderInfo.call}}">{{orderInfo.call}}</mp-cell>
      </mp-cells>
    </view>
  </view>
  <view class="ctnt1 placehold" hidden="{{currentNavtab==2 ? '' : true}}">
    <view class="page__bd">
      <mp-cells ext-class="my-cells">
        <mp-cell value="服务商" footer="{{orderInfo.facilitatorId}}">{{orderInfo.facilitatorId}}</mp-cell>
        <mp-cell value="维修工" footer="{{orderInfo.id}}">{{orderInfo.id}}</mp-cell>
        <mp-cell value="维修建议" footer="{{suggestionOne}}" bindtap="chooseSuggestion">
          {{suggestionOne}}
        </mp-cell>
        <mp-cell value="备品备件" footer="{{}}" bindtap="onAddSpareParts">

        </mp-cell>

        <modal id="modal" hidden="{{hiddenmodalput}}" title="维修建议" confirm-text="提交" cancel-text="取消" bindcancel="cancel" bindconfirm="confirm">
          <textarea placeholder="请输入维修建议" bindinput="suggestion" value="{{orderInfo.suggestion}}"></textarea>
        </modal>
      </mp-cells>
    </view>
  </view>

  <view class="placehold" hidden="{{currentNavtab==3 ? '' : true}}">
    <view wx:for="{{orderLogs}}" wx:key="item" class="orderlog_view">
      <view class="orderlog_time">{{item.createdTime}}</view>
      <image class="orderlog_image" src="{{index == 0?'/imgs/others/progress_first.png':'/imgs/others/progress.png'}}"></image>
      <view class="orderlog_content {{index==0?'first':''}}">{{workOrderStatus[item.status]}},{{item.lastOperator}}</view>
    </view>
  </view>

</view>

<template is="onAddSpareParts" data="{{showSpareParts,deviceOrderCount,deviceOrderList,allDevices}}">
</template>