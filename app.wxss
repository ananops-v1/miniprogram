/*userinfo*/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 13rpx 13rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 210rpx;
  height: 210rpx;
  margin: 15rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
